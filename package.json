{
  "name": "playground-tailwindcss-agents",
  "version": "1.0.0",
  "description": "Playground de Tailwind CSS usando Agentes IA",
  "scripts": {
    "dev": "npm-run-all --parallel watch:css serve",
    "watch:css": "tailwindcss -i ./assets/css/base.css -o ./assets/css/styles.css --watch",
    "build:css": "tailwindcss -i ./assets/css/base.css -o ./assets/css/styles.css --minify",
    "serve": "browser-sync start --server --files \"*.html, assets/css/*.css, assets/js/*.js\" --no-notify"
  },
  "keywords": [
    "tailwindcss",
    "playground"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.14"
  }
}
